@model ActionCommandGame.Model.Item;

<h3>Edit item</h3>

    <!-- If item is a Fuel-item -->
    @if (Model.Fuel != 0)
    {
        <form method="post">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" placeholder="Name" asp-for="Name"/>
            </div>
            <div class="form-group">
                <label>Fuel</label>
                <input class="form-control" placeholder="Fuel" asp-for="Fuel"/>
            </div>
            <div class="form-group">
                <label>Cooldown seconds</label>
                <input class="form-control" placeholder="Cooldown seconds" asp-for="ActionCooldownSeconds"/>
            </div>
            <div class="form-group">
                <label>Price</label>
                <input class="form-control" placeholder="Price" asp-for="Price"/>
            </div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Attack" value="0"/>
            <input type="hidden" asp-for="Defense" value="0"/>

            <input type="submit" asp-action="Edit" value="Save" class="btn btn-primary m-1"/>
        </form>
    }
    
    <!-- If item is a Snowboard-item -->
