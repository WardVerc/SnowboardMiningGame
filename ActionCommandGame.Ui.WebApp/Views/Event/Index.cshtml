            <td>@gameEvent.Description</td>
            <td>@gameEvent.DefenseWithGearDescription</td>
            <td>@gameEvent.DefenseWithoutGearDescription</td>
            <td>@gameEvent.DefenseLoss</td>
            <td>@gameEvent.Probability</td>
            <td style="display: flex;">
                <form method="get">
                    <input type="hidden" asp-for="NegativeEventId" value="@gameEvent.Id"/>
                    <input type="submit" asp-action="EditNegative" value="Edit" class="btn btn-secondary m-1"/>
                </form>
                <form method="post">
                    <input type="hidden" asp-for="NegativeEventId" value="@gameEvent.Id"/>
                    <input type="submit" asp-action="DeleteNegative" value="Delete" class="btn btn-danger m-1"/>
