@model ActionCommandGame.Model.PositiveGameEvent;

<h3>Edit Event</h3>

<form method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" placeholder="Name" asp-for="Name"/>
    </div>
    <div class="form-group">
        <label>Description</label>
        <input class="form-control" placeholder="Description" asp-for="Description"/>
    </div>
    <div class="form-group">
        <label>Money</label>
        <input class="form-control" placeholder="Money" asp-for="Money"/>
    </div>
    <div class="form-group">
        <label>Experience</label>
        <input class="form-control" placeholder="Experience" asp-for="Experience"/>
    </div>
    <div class="form-group">
            <label>Probability</label>
            <input class="form-control" placeholder="Probability" asp-for="Probability"/>
        </div>

    <input type="hidden" asp-for="Id" />

    <input type="submit" asp-action="EditPositive" value="Save" class="btn btn-primary m-1"/>
</form>